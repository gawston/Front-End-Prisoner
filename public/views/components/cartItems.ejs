<!-- cart items -->
<div class="flex items-center bg-white gap-4 py-2 px-4 border-t border-x hover:bg-gray-100 transition-all text-md">
    <div class="w-1/2 flex items-center gap-4">
        <img src="<%= imgurl %>" alt="product" class="w-12 h-12 object-cover rounded-md">
        <div>
            <div class="text-md lg:text-lg"><%= productName %></div>
            <!-- <div class="text-sm text-[#666]">รายละเอียดสินค้า</div> -->
        </div>
    </div>
    <div class="w-1/6 text-center">฿ <%= price %></div>
    <div class="w-1/6 flex justify-center items-center">
        <input class="bg-gray-50 border w-12 text-center rounded-md" type="number" name="cart-amount" id="cart-amount" value="<%= amount %>" min="1" max="100" disabled />
    </div>
    <div class="w-1/6 flex justify-center items-center">
        <a href="/deleteitemscart/<%= productId %>" class="bg-red-500 text-white py-1 px-2 rounded-md hover:text-[#F4BF14] transition-all cursor-pointer">ลบสินค้า</a>
    </div>
</div>


